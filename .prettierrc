{
  "prettier/prettier": [
    "error",
    {
      "singleQuote": true,
      "parser": "flow",
      "arrowParens": "avoid",
      "bracketSpacing": false,
      "endOfLine": "lf",
      "htmlWhitespaceSensitivity": "css",
      "insertPragma": false,
      "jsxBracketSameLine": false,
      "jsxSingleQuote": false,
      "printWidth": 80,
      "proseWrap": "always",
      "quoteProps": "as-needed",
      "requirePragma": false,
      "semi": false,
      "tabWidth": 2,
      "useTabs": false
    }
  ]
}
